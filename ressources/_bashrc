# Set PATH.
export PATH=/usr/local/ccache/bin:/home/vagrant/miniconda3/bin:/usr/local/bin:/bin:/usr/bin:/usr/local/sbin:/usr/sbin:/sbin

# Source global definitions.
if [ -f /etc/bashrc ]; then
        . /etc/bashrc
fi

# Use bash vim mode.
set -o vi

# Set vi as editor.
export EDITOR=/usr/bin/vim

# Configure prompt.
PS1="\h:\W$ "

# Enable programmable completion features
if [ -f /etc/bash_completion ]; then
        . /etc/bash_completion
fi

VAGRANT_BOX_NAME=centos-7.2
VAGRANT_BOX_VERSION=0.1.0
